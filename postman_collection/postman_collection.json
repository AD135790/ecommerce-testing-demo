{
  "info": {
    "name": "FakeStoreAPI Demo 带断言",
    "_postman_id": "12345678-aaaa-bbbb-cccc-1234567890ab",
    "description": "电商平台核心流程测试：注册 → 登录 → 下单（带断言）",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "注册用户",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/users", "host": ["{{base_url}}"], "path": ["users"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"username\": \"johnd\",\n  \"password\": \"m38rmF$\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"注册成功，返回201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "var jsonData = pm.response.json();",
              "pm.expect(jsonData).to.have.property(\"id\");"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "登录获取 Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"mor_2314\",\n  \"password\": \"83r5^_\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"登录成功，返回200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "var jsonData = pm.response.json();",
              "pm.expect(jsonData).to.have.property(\"token\");",
              "pm.environment.set(\"token\", jsonData.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "下单（购物车）",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{base_url}}/carts", "host": ["{{base_url}}"], "path": ["carts"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"date\": \"2025-09-01\",\n  \"products\": [\n    {\"productId\": 5, \"quantity\": 1},\n    {\"productId\": 1, \"quantity\": 3}\n  ]\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"下单成功，返回200或201\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "var jsonData = pm.response.json();",
              "pm.expect(jsonData).to.have.property(\"id\");"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
